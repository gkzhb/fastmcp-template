{
  "name": "fastmcp-template",
  "version": "0.0.1",
  "description": "MCP Server",
  "author": "",
  "license": "MIT",
  "keywords": [
    "model-context-protocol",
    "mcp"
  ],
  "main": "dist/index.js",
  "scripts": {
